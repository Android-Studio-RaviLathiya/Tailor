                            android:layout_marginLeft="05dp"
                            android:fontFamily="@font/antic"
                            android:text="Contect Details"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:transitionName="pd" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#f6f6f6" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/shopd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/shopa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="05dp"
                            android:fontFamily="@font/antic"
                            android:text="Shop Details"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:transitionName="pd" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#f6f6f6" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/shopaddressd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/shopaddressa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="05dp"
                            android:fontFamily="@font/antic"
                            android:text="Shop Address Details"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:transitionName="pd" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#f6f6f6" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#f6f6f6" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/editimgd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/editimga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="05dp"
                            android:fontFamily="@font/antic"
                            android:text="Edit Image"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:transitionName="pd" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#f6f6f6" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/otherbranchd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/otherbrancha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="05dp"
                            android:fontFamily="@font/antic"
                            android:text="Other Branch Details"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:transitionName="otherbrancha" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#f6f6f6" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/black" />

