<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SettingActivity.NewbusinessStart.NewBussStart">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/antic"
            android:text="Edit Business Detail"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:transitionName="nbs" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|start"
            android:src="@drawable/left" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f6f6f6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tai"
            android:textSize="30dp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:id="@+id/text"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:text="l"
            android:textColor="#FB0B0B"
            android:textSize="50dp"
            app:fontFamily="@font/aclonica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="02dp"
            android:text="or"
            android:textSize="30dp"
            app:fontFamily="@font/aclonica" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Start your new business"
        android:textSize="18dp"
        android:transitionName="welcome_text"
        app:fontFamily="@font/antic" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="05dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">


                    <View
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black" />

                    <ImageView
                        android:id="@+id/one"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/black" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/black" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/black" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/black" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/black" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@color/black" />

                </LinearLayout>

                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pasnald"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/pasnala"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginLeft="05dp"
                            android:fontFamily="@font/antic"
                            android:text="Pasnal Details"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:transitionName="pasnala" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="end|center"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_chevron_right_black_24dp" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#f6f6f6" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/contectd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/contecta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
